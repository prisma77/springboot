<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.multi.springboot.mapper.CommentMapper">

    <select id="findAll" resultType="com.multi.springboot.model.Comment">
        SELECT id, content, created_at AS createdAt FROM comments
    </select>

    <insert id="insertComment" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO comments (content) VALUES (#{content})
    </insert>

    <delete id="deleteComment">
        DELETE FROM comments WHERE id = #{id}
    </delete>

    <update id="updateComment">
        UPDATE comments SET content=#{content} WHERE id=#{id}
    </update>

</mapper>
